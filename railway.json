{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "corepack enable && yarn install && yarn build"
  },
  "deploy": {
    "startCommand": "npx serve -s dist -l tcp://0.0.0.0:8080",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
